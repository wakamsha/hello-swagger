{
  "name": "swagger-hello",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:wakamsha/swagger-hello.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar": "^3.3.0",
    "connect-modrewrite": "^0.10.2",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "json-refs": "^3.0.13",
    "npm-run-all": "^4.1.5",
    "yargs": "^15.0.2"
  },
  "scripts": {
    "reset": "rm -rf dist/; mkdir -p dist/spec/",
    "copy": "cp src/index.html dist/index.html",
    "generate": "node ./bin/generate.js",
    "serve": "browser-sync start -c bs-config.js",
    "build": "yarn reset; yarn copy; run-p \"generate -- --spec {1} {2}\" \"serve\" --"
  }
}
