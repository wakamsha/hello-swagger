{
  "name": "swagger-hello",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:wakamsha/swagger-hello.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "json-refs": "^3.0.13",
    "npm-run-all": "^4.1.5",
    "yargs": "^15.0.2"
  },
  "scripts": {
    "reset": "rm -rf dist/; mkdir -p dist/spec/",
    "copy": "cp src/index.html dist/index.html",
    "generate": "node ./bin/generate.js --spec pet-store",
    "watch": "chokidar \"src/**/*.yaml\" -c \"yarn generate\"",
    "serve": "browser-sync start -c bs-config.js",
    "build": "yarn reset; yarn copy; yarn generate;",
    "start": "yarn build; run-p \"watch\" \"serve\""
  }
}
